<Page x:Class="STRIPES.Pages.ScopePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:STRIPES.Pages"
	  NavigationCacheMode="Required"
	  GotFocus="Page_GotFocus"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Center"
					Height="32"
					Grid.Row="0">
			<Button Content="Load Volumes" 
					Command="{Binding LoadControlVolumesAsync}"/>
			<Button Content="Spawn Window"
					Click="SpawnButton_Click"/>
		</StackPanel>

		<local:ScopeCanvas x:Name="ScpBackground" Grid.Row="1"
						   GotFocus="Page_GotFocus"/>

		<AutoSuggestBox x:Name="AsbOmnibar" Grid.Row="2"
						PlaceholderText="Command…"
						QueryIcon="Go"/>
	</Grid>
</Page>
