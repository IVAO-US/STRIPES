<Page x:Class="STRIPES.Pages.ScopePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:STRIPES.Pages"
	  NavigationCacheMode="Required"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal"
					HorizontalAlignment="Center"
					Height="32"
					Grid.Row="0">
			<Button Content="Load Volumes" 
					Command="{Binding LoadControlVolumesAsync}"/>
			<Button Content="Spawn Window"
					Click="SpawnButton_Click"/>
		</StackPanel>

		<local:ScopeCanvas Grid.Row="1" 
						   x:Name="ScpBackground"/>
	</Grid>
</Page>
